generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Registration {
  id String @id @db.Uuid @default(uuid())
  name String @db.VarChar(50)
  city String @db.VarChar(70)
  phone String @db.Char(12)
  code String @db.Char(10) @unique


  @@map("registrations")
}

model Code {
  id String @id @db.Uuid @default(uuid())
  code String @db.Char(10) @unique

  @@map("codes")
}

model Media {
  id String @id @default(uuid())
  type MediaType
  url String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("media")
}

model Info {
  id String @id @default(uuid())
  type InfoType @unique
  value String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("info")
}

enum InfoType {
  X_ACCOUNT
  PHONE_NUMBER
  INSTAGRAM_ACCOUNT
}

enum MediaType {
  HEADER_LOGO
  LANDING_VIDEO
  TERMS_LOGO
  START_AUDIO
  END_AUDIO
  SPONSORS_LOGOS
}
